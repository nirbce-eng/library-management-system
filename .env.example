# Library Management System - Environment Configuration
# Copy this file to .env and fill in the values

# REQUIRED: Flask secret key for session encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-here

# RECOMMENDED: Initial admin password
# If not set, a random password will be generated and printed to console
ADMIN_PASSWORD=your-secure-admin-password

# OPTIONAL: Allowed CORS origins (comma-separated)
# Default: http://localhost:3000,http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OPTIONAL: Enable HSTS header (set to true when using HTTPS)
# Default: false
ENABLE_HSTS=false

# OPTIONAL: Require secure cookies (HTTPS only)
# Set to false for local development without HTTPS
# Default: true
SECRET_COOKIE_SECURE=false
